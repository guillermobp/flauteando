<section class="past-events">
  <span class="section-title">
    Versiones Anteriores
  </span>
  <ul>
    <% @encuentro.past_events.each do |past_event| %>
      <li>
        <%= link_to image_tag(past_event.reference_image_display), version_path(past_event.version) %>
        <span><%= past_event.version %></span>
      </li>
    <% end %>
  </ul>
</section>
