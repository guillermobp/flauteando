@import url('https://fonts.googleapis.com/css?family=Rubik+Mono+One&display=swap');
@import url('https://fonts.googleapis.com/css?family=Lato&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;900&display=swap');

body {
  margin: 0;

  section.hero {
    height: 100vh;
    overflow: hidden;

    div.slider-track {
      .slider {
        margin: 0;
        padding: 0;
        list-style: none;
        display: grid;
        grid-template-columns: 1fr;

        .slider-item {
          grid-column: 1/2;
          grid-row: 1/2;
          opacity: 0;
          display: grid;
          visibility: hidden;
          overflow: hidden;
          transition: opacity 500ms;

          img {
            object-fit: cover;
            height: 200vh;
            grid-column: 1/2;
            grid-row: 1/2;
          }

          span.slider-item-text {
            grid-column: 1/2;
            grid-row: 1/2;
            margin-top: 22rem;
            margin-left: 25rem;
            width: max-content;
            height: max-content;
            text-shadow: 1px 1px 1px #000;

            h1 {
              color: white;
              font-family: 'Roboto';
              font-weight: 900;
              font-size: 7rem;
              letter-spacing: 0.25rem;
              margin: 0;
              opacity: 0;
              transition: opacity 250ms, transform 500ms ease-out;
              transition-delay: 250ms;
              transform: translate(2rem);
            }

            p {
              color: white;
              width: 27rem;
              margin: 0;
              font-family: 'Montserrat', sans-serif;
              font-weight: 400;
              font-size: 1.25em;
              line-height: 2rem;
              opacity: 0;
              transition: opacity 250ms, transform 500ms ease-out;
              transition-delay: 500ms;
              transform: translate(2rem);
            }
          }

          &.active {
            visibility: visible;
            opacity: 1;

            span.slider-item-text {
              h1,
              p {
                opacity: 1;
                transform: translate(0);
              }
            }
          }
        }
      }
    }
  }

  section.counter {
    display: grid;
    justify-content: center;
    background-color: #cdd4d5;
    color: white;
    text-shadow: 2px 2px 8px #000;
    font-family: 'Montserrat';

    .counter-title {
      grid-column: 2;
      grid-row: 1;
      align-self: center;
      justify-self: center;
      font-size: 2rem;
      font-weight: 900;
      margin-top: 4rem;
      opacity: 0;
      transition: opacity 250ms;
      transition-delay: 250ms;

      &.visible {
        opacity: 1;
      }
    }

    .counter-components {
      grid-column: 2;
      grid-row: 2;
      height: 20rem;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      grid-gap: 2rem;
      width: 45rem;
      margin-top: 2rem;
      min-width: max-content;

      .counter-component {
        display: flex;
        flex-direction: column;
        align-items: center;
        opacity: 0;
        transform: translate(5rem);
        transition: opacity 250ms, transform 500ms ease-out;

        .counter-component-value {
          span {
            padding: 1rem;
            background-color: #38375b;
            border-radius: 4px;
            color: white;
            font-size: 5rem;
            font-weight: 900;
            // text-shadow: 2px 2px 8px #000;
          }
        }

        .counter-component-text {
          margin-top: 2rem;
          font-size: 1.75rem;
        }

        &.visible {
          // visibility: visible;
          opacity: 1;
          transform: translate(0);
        }
      }

      .counter-component:nth-of-type(1) {
        transition-delay: 100ms;
      }

      .counter-component:nth-of-type(2) {
        transition-delay: 200ms;
      }

      .counter-component:nth-of-type(3) {
        transition-delay: 300ms;
      }

      .counter-component:nth-of-type(4) {
        transition-delay: 400ms;
      }
    }
  }

  section.profiles {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    align-content: flex-start;
    background-color: black;
    padding-bottom: 5rem;

    span.image-crop {
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: 1fr;
      height: 350px;
      object-fit: cover;
      overflow: hidden;
      cursor: pointer;

      img,
      span.fechas-container,
      span.nombre {
        grid-column: 1/2;
        grid-row: 1/2;
      }

      span.fechas-container {
        position: relative;
        left: -110px;
      }

      img {
        object-fit: cover;
        height: 350px;
        width: 100%;
        filter: grayscale(1) brightness(.9) contrast(1.5);
        transition: opacity 150ms, filter 150ms, transform 150ms ease-in-out;
      }

      span {
        z-index: 100;
        opacity: 0.7;
        font-weight: bold;
        font-family: 'Lato';
        transition-duration: 150ms;

        &.fecha,
        &.nombre {
          // background-color: white;
          color: white;
          text-shadow: 1px 1px 4px black;
          font-family: 'Montserrat';
        }

        &.fechas-container {
          display: flex;
          flex-flow: column;
          align-self: flex-start;
          justify-self: flex-start;
          margin-top: 1rem;
          transition-property: left;

          .fecha {
            margin-top: 0.5rem;
            padding: 0.5rem;
            border-radius: 0 4px 4px 0;
          }
        }

        &.nombre {
          position: relative;
          opacity: 0;
          align-self: flex-end;
          padding: 2rem;
          font-size: 2rem;
          text-align: right;
          transition-property: opacity 150ms;
        }
      }

      &:hover {
        background: linear-gradient(225deg,#53f6c6 0,#53f6c6 0,#6e38db 100%);

        span {
          &.fechas-container {
            left: 0;
          }

          &.nombre {
            opacity: 0.7;
          }
        }

        img {
          filter: grayscale(1) brightness(.9) contrast(1.2);
          transform: scale(1.1);
          opacity: 0.4;
        }
      }
    }
  }
}
