  section.calendar {
    background-color: $base-color-dark;
    background-color: #0171DD;
    display: grid;
    grid-template-columns: auto 1fr auto;
    // justify-content: center;
    font-family: 'Lato', sans-serif;

    #calendar-nav {
      grid-column: 2;
      display: flex;
      list-style: none;
      width: max-content;
      margin: 0;
      padding: 0;
      margin-top: 2rem;
      font-size: 1.25rem;
      font-weight: 900;
      justify-self: center;

      li {
        // border: 1px solid white;
        padding: 1rem 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        border-right: 1px solid #138BFE;
        background-color: #00498E;
        cursor: pointer;
        // border-top: 1px solid white;
        // border-bottom: 1px solid white;
        &:first-child {
          // border: 1px solid white;
          border-top-left-radius: 14px;
          border-bottom-left-radius: 14px;
        }

        &:last-child {
          // border: 1px solid white;
          border-right: 0;
          border-top-right-radius: 14px;
          border-bottom-right-radius: 14px;
        }

        &.active,
        &:hover {
          background-color: #138BFE;
        }
      }
    }

    .calendar-day {
      grid-column: 2;
      grid-row: 2;
      list-style: none;
      // width: 80rem;
      visibility: hidden;
      opacity: 0;
      padding: 0;
      max-width: max-content;
      justify-self: center;
      transition: opacity 350ms ease-in;
      transition-delay: 150ms;

      &.active {
        visibility: visible;
        opacity: 1;
      }

      li {
        display: grid;
        grid-template-columns: max-content 2fr 1fr;
        gap: 0.5rem;
        border: 1px solid white;
        border-radius: 4px;
        padding: 1rem 2rem;
        margin-bottom: 1rem;

        img {
          grid-column: 1;
          grid-row: 1/3;
          border-radius: 50px;
          margin-right: 2rem;
        }

        span {
          &.description {
            grid-column: 2;
            grid-row: 1;
            margin-right: 2rem;
          }

          &.time {
            grid-column: 3;
            grid-row: 1;
          }

          &.by {
            grid-column: 2;
            grid-row: 2;
          }

          &.place {
            grid-column: 3;
            grid-row: 2;
          }

          &.description,
          &.time {
            // font-family: 'Roboto', sans-serif;
            font-weight: 700;
            // font-size: 1.25rem;
            align-self: end;
          }

          &.by,
          &.place {
            // font-family: 'Lato', sans-serif;
            // font-size: 1.1rem;
            color: #ccc;
            font-weight: 400;
          }

          &.by,
          &.description {
            justify-self: start;
          }

          &.place,
          &.time {
            // justify-self: end;
          }
        }

        .button {
          grid-column: 4;
          grid-row: 1/3;
          align-self: center;
          box-shadow: 0 10px 14px -7px #276873;
          // background: linear-gradient(to bottom, #599bb3 5%, #408c99 100%);
          background: linear-gradient(135deg, #01dddb 45%, #01DD6D 100%);
          background-color: #599bb3;
          border-radius: 30px;
          display: inline-block;
          cursor: pointer;
          color: #ffffff;
          font-family: Arial;
          font-size: 20px;
          font-weight: bold;
          padding: 13px 32px;
          text-decoration: none;
          text-shadow: 0 1px 0 #3d768a;
          transition: scale 250ms ease-in-out;

          &:hover {
            // background: linear-gradient(135deg, #01dddb -10%, #0171DD 110%);
            background-color: #408c99;
            scale: 1.05;
          }

          &:active {
            position: relative;
            top: 1px;
          }
        }
      }
    }
  }

  section#instagram {
    // background: linear-gradient(180deg, $base-color-dark 0, $base-color-light 100%);
    background-color: black;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    font-family: 'Montserrat', sans-serif;
    padding-bottom: 5rem;

    #instagram-title {
      grid-column: 2;
      justify-self: center;
      align-self: center;
      font-size: 2rem;
      font-weight: 900;
      margin: 4rem 0;

      a {
        text-decoration: none;
        color: #01dddb;
      }
    }

    #instafeed-slider {
      grid-column: 2;
      display: grid;
      // grid-template-columns: 4rem 1fr 4rem;
      align-items: center;
      // text-align: center;
      // margin: 0 4rem;
      overflow: hidden;

      .instafeed-slider-control {
        grid-column: 1;
        grid-row: 1;
        font-size: 4rem;
        font-weight: 900;
        // justify-self: center;
        z-index: 10;
        opacity: 0.25;
        transition: opacity 150ms, scale 250;

        &:hover {
          opacity: 0.5;
          scale: 1.25;
          cursor: pointer;
        }

        &#instafeed-slider-control-left {
          justify-self: start;
        }

        &#instafeed-slider-control-right {
          justify-self: end;
        }
      }

      #instafeed-slider-track-container {
        grid-column: 1;
        grid-row: 1;
        overflow: hidden;

        #instafeed {
          display: flex;
          // grid-template-columns: repeat(auto-fit, minmax(16rem, 1fr));
          gap: 2rem;
          width: min-content;
          transition: transform 250ms ease-out;

          a {
            overflow: hidden;

            img {
              width: 18rem;
              object-fit: contain;
              transition: scale 150ms ease-in-out;

              &:hover {
                scale: 1.1;
              }
            }
          }
        }
      }
    }
  }
